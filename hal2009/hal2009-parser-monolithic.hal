                print "found no adjective."
                print new line

                set new var d to var part_size - 1
                while var d >= var near_end do
                    set new var word_d to from array list_of_list_of_words element [ var array_index ] element [ var d ]

                    if from hash sym_noun element { from hash tags element { var word_d } 1st element } do
